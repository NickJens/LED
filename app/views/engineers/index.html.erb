<h1>Listing engineers</h1>

<h3>Company name: <%= @rentee.name %></h3>

<h4 data-renteetokens="<%= @rentee.tokens%>"> Total Tokens: <%= @rentee.tokens%></h4>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Tokens</th>
      <th>Add Tokens</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @engineers.each do |engineer| %>
      <tr class="token" data-id="<%= engineer.id%>" data-token="<%= engineer.tokens%>">
        <td><%= engineer.name %></td>
        <td><%= engineer.phone %></td>
        <td><%= engineer.tokens %></td>
        <td>
          <%= form_for([engineer.rentee, engineer], method: "patch") do |f| %>
            <%= f.number_field(:tokens, min:0) %>
            <%= f.submit("add token") %>
          <% end %>
        </td>
        <td><%= link_to 'Show', rentee_engineer_path(engineer.rentee, engineer) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Engineer', new_rentee_engineer_path %>
